@{
    ViewData["Title"] = "Procesamiento de actas - Presidenciales";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content text-center">
            <!-- Content Header (Page header) -->
            <section class="content-header">
            <div class="container-fluid mx-auto">
                <div class="row">
                    <div>
                        <ol>
                            @* ############################################################### *@
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-2">
                                            <li class="breadcrumb-item active">Mesa</li>
                                            <input id="colegioMesa" type="text" class="form-control" placeholder="Colegio / Mesa (1705A)">
                                        </div>
                                        <div class="col-8">
                                            <P></P>
                                            <h1>@ViewData["Title"]</h1>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @{
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        @for (int i = 0; i < Model; i++)
                                        {
                                            <div class="col-12">
                                                <div class="row">
                                                    <div class="col-sm-1">
                                                        #@(i + 1)
                                                    </div>
                                                    <div class="col-2">
                                                        <input type="text" class="form-control" placeholder="Partido" disabled>
                                                    </div>
                                                    <div class="col-7">
                                                        <input type="text" class="form-control" placeholder="Nombre del candidato" disabled>
                                                    </div>
                                                    <div class="col-2">
                                                        <input type="number" class="form-control" placeholder="#">
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            }

                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-2">
                                            <input type="number" class="form-control" placeholder="# Votos Válidos">
                                        </div>
                                        <div class="col-2">
                                            <input type="number" class="form-control" placeholder="# Votos Nulos">
                                        </div>
                                        <div class="col-2">
                                            <input type="number" class="form-control" placeholder="# Boletas Observadas">
                                        </div>
                                        <div class="col-2">
                                            <input type="number" class="form-control" placeholder="# TOTAL DE VOTOS">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-6">
                                            <button class="btn btn-secondary btn-block">🗑 Limpiar Todo</button>
                                        </div>
                                        <div class="col-6">
                                                    <button class="btn btn-primary btn-block">✔ Procesar Acta</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @* ############################################################### *@
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
    </section>
            </section>

            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>

    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var colegioMesa = document.getElementById('colegioMesa');
            colegioMesa.select();
        });
    </script>
</body>
</html>
