<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReAct v2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Re_Act_v2.styles.css" asp-append-version="true" />
</head>
<body>
    @if (!ViewContext.RouteData.Values["controller"].ToString().Equals("Login", StringComparison.OrdinalIgnoreCase))
    {
        <partial name="_Navbar" />
        <partial name="_Sidebar" />
    }
    @RenderBody()
    @if (!ViewContext.RouteData.Values["controller"].ToString().Equals("Login", StringComparison.OrdinalIgnoreCase))
    {
        <partial name="_Footer" />
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>